
alias v="~/nvim/bin/nvim"

# Edit and source zsh aliases.
alias be="v ~/.dotfiles/zsh/.zsh_aliases"
alias bs="source ~/.zshrc"

# I3 config.
alias i3c="v ~/.dotfiles/i3/.config/i3/config"

# Neovim Config.
alias vc="v ~/.config/nvim/"

# back, Back, BACK!
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias c="clear"
alias h="c && cd ~ && ls -lah"

# NEOVIM
alias nvim="~/nvim/bin/nvim"
alias v="nvim"

# TMUX
alias tl="tmux ls"
alias tk="tmux kill-session"
alias ta="tmux attach"

# Laravel
alias a="php artisan"
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias s="a serve"
alias ae="a env:encrypt --env=production --key=$TF_VAR_laravel_encryption_secret --force"

# Testing / Scanning project
alias stan="./vendor/bin/phpstan analyse --memory-limit=2G"
alias phpunit="./vendor/bin/phpunit"
alias t="phpunit"
alias tf="t --filter="
alias tt="stan && t"

# Git
alias g="git"
alias gs="g status"
alias ga="g add -p"
alias gl="g log --oneline"
alias gaa="g add ."
alias gc="git commit -S -m"
alias gp="git push"
alias gpl="git pull"

# Fix permissions to my own from current directory recursively.
alias fixp="sudo chown -R david:david ."

# Update executable PATH.
export PATH=$HOME/.bin:$HOME/.local/bin:$HOME/.config/composer/vendor/bin:$PATH
