

alias v="nvim"

# Edit and source zsh aliases.
alias be="v ~/.dotfiles/zsh/.zsh_aliases"
alias bs="source ~/.zshrc"

# back, Back, BACK!
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias c="clear"
alias h="c && cd ~ && ls -lah"

alias copy="xclip -selection clipboard"
alias paste="xclip -o -selection clipboard"

# Tmux
alias t="tmux"
alias tl="t ls"
alias tk="t kill-session"
alias ta="t attach"

# Laravel
alias a="php artisan"
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias s="a serve"

# Testing / Scanning project
alias stan="./vendor/bin/phpstan analyse --memory-limit=2G"
alias phpunit="./vendor/bin/phpunit"

# Git
alias g="git"
alias gs="g status"
alias ga="g add -p"
alias gl="g log --oneline"
alias gaa="g add ."
alias gc="git commit -S -m"
alias gp="git push"
alias gpl="git pull"

alias d="docker"
alias dc="docker-compose"

# VimWIKI Deployments
alias vwdwebsite="scp -r ~/Projects/davidpeach.me/* my_webapp@davidpeach.me:/var/www/my_webapp/www"
alias vwdcommonplace="scp -r ~/vimwiki/commonplace_html/* my_webapp__2@commonplace.davidpeach.me:/var/www/my_webapp__2/www"

# Update executable PATH.
export PATH=$HOME/.bin:$HOME/.local/bin:$HOME/.config/composer/vendor/bin:$PATH

export GPG_TTY=$(tty)
export USE_GKE_GCLOUD_AUTH_PLUGIN=True

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export EDITOR=v
export GIT_EDITOR=v

export FZF_DEFAULT_OPTS=" \
--color=bg+:#ccd0da,bg:#eff1f5,spinner:#dc8a78,hl:#d20f39 \
--color=fg:#4c4f69,header:#d20f39,info:#8839ef,pointer:#dc8a78 \
--color=marker:#dc8a78,fg+:#4c4f69,prompt:#8839ef,hl+:#d20f39"
