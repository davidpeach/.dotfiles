
alias v="nvim"

alias be="v ~/.dotfiles/zsh/.zsh_aliases"
alias bs="source ~/.zshrc"
alias i3c="v ~/.dotfiles/i3/.config/i3/config"

alias vc="v ~/.config/nvim/init.vim"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias c="clear"
alias h="c && cd ~ && ls -lah"

# TMUX
alias tl="tmux ls"
alias tk="tmux kill-session"

alias a="php artisan"
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias stan="./vendor/bin/phpstan analyse --memory-limit=2G"
alias t="./vendor/bin/phpunit"
alias tf="t --filter="
alias tt="stan && t"
alias s="a serve"
alias phpunit="./vendor/bin/phpunit"

alias g="git"
alias gs="g status"
alias ga="g add -p"
alias gl="g log --oneline"
alias gaa="g add ."
alias gc="git commit -S -m"
alias gp="git push"
alias gpl="git pull"

alias fixp="sudo chown -R david:david ."

export PATH=$HOME/.bin:$HOME/.config/composer/vendor/bin:$PATH
export DOCKER_HOST=unix://$XDG_RUNTIME_DIR/docker.sock
