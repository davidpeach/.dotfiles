#!/bin/bash

if [[ ! $(which docker) ]]; then
    echo "Docker not found."
    exit 1
fi

# ----------------------------------
# Delete all containers and Volumes.
# ----------------------------------
docker rm -vf $(docker ps -aq)

# ----------------------------------
# Delete all Images.
# ----------------------------------
docker rmi -f $(docker images -aq)

echo "Its.....all....GONE !"
