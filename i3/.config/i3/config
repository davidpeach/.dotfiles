        # -m spacer datetime spacer pomodoro spacer amixer spacer memory spacer arch-update battery  \
        # -p datetime.locale=en_GB.UTF-8 spacer.text=" " \
        # -t dracula-powerline
    }

exec setxkbmap gb
exec always nitrogen --restore

# Scratchpads

bindsym $mod+mod2+KP_1 [instance="fm"] scratchpad show; move position center

exec --no-startup-id kitty --name fm -e ranger

include $HOME/.config/i3/includes/host-specific.conf
